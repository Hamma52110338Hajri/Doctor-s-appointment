{% extends 'base.html.twig' %}

{% block title %}Hello DoctorController!{% endblock %}

{% block body %}

 <!-- Doctors Section -->
    <section id="doctors" class="doctors section">

      <!-- Section Title -->
      <div class="container section-title" >
        <h2>Doctors</h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
      </div><!-- End Section Title -->

      <div class="container">

        <div class="row gy-4">
        {{ form_start(form) }}

          <div class="col-lg-6" >
            <div class="team-member d-flex align-items-start">
              <div class="pic"><img src="{{ asset('assets/img/doctors/doctors-1.jpg') }}" class="img-fluid" alt=""></div>
              <div class="member-info">
                <h3>{{ form_row(form.image) }}</h3>
                <h3>{{ form_row(form.name) }}</h3>
                <h3>{{ form_row(form.phonenumber) }}</h3>
                <h3>{{ form_row(form.department) }}</h3>
                <h3>{{ form_row(form.imageFile) }}</h3>


                <span>{{ form_row(form.speciality) }}</span>
                <p>{{ form_row(form.description) }}</p>
                <div class="social">
                  <a href=""><i class="bi bi-twitter-x"></i></a>
                  <a href=""><i class="bi bi-facebook"></i></a>
                  <a href=""><i class="bi bi-instagram"></i></a>
                  <a href=""><i class="bi bi-linkedin"></i> </a>
                </div>
              </div>
            </div>
          </div><!-- End Team Member -->

         
          {{ form_end(form) }}

        </div>

      </div>

    </section><!-- /Doctors Section -->

{% endblock %}
